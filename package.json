{
  "name": "opticsLab",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "fix": "biome check --write .",
    "check": "tsc --noEmit",
    "release": "npm version patch && git push && git push --tags",
    "serve": "npx serve -s dist",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "generate-svg-icon": "tsx scripts/opticsToSVG.ts",
    "icons": "npm run generate-svg-icon && tsx scripts/generate-icons.ts",
    "prepare": "git config core.hooksPath .githooks",
    "commit:skip": "git commit --no-verify",
    "push:skip": "git push --no-verify"
  },
  "dependencies": {
    "scenerystack": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^25.2.3",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "~5.7.2",
    "vite": "^5.4.10",
    "vite-plugin-pwa": "^1.2.0"
  }
}
